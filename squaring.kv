BoxLayout:
    orientation:'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: True
        Button:
            text: 'Square'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            font_size: 48
            color: (255,105,180,1)
            multiline: True
    BoxLayout:
        orientation:'vertical'
        Label:
            id: output_label1
            text: 'Enter a number and press "Square"'
